# SEO Blog Automation SaaS - Environment Variables

# Database
DATABASE_URL=postgresql://seo_user:seo_password_123@db:5432/seo_saas_db

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=seo-blog-automation-secret-key-change-in-production-minimum-32-chars
JWT_SECRET_KEY=jwt-secret-key-for-seo-blog-automation-change-in-production-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]

# App Settings
DEBUG=true
APP_NAME=SEO Blog Automation SaaS
APP_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Business Logic
MAX_KEYWORDS_PER_UPLOAD=10000
MAX_BLOGS_PER_BATCH=50
DEFAULT_BLOG_MIN_WORDS=2000
DEFAULT_FAQ_COUNT=15

# Subscription Limits
STARTER_MONTHLY_BLOGS=100
PROFESSIONAL_MONTHLY_BLOGS=500
ENTERPRISE_MONTHLY_BLOGS=2000

# External APIs (Optional - users will add their own)
OPENAI_API_KEY=

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Stripe (Optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Monitoring (Optional)
SENTRY_DSN=

# File Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1