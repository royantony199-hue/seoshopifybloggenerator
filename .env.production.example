# Production Environment Configuration
# Copy this file to .env.production and update all values

# Database Configuration
DB_USER=seo_saas_user
DB_PASSWORD=your-super-secure-database-password-here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/seo_saas_prod

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Security Configuration (CRITICAL - MUST CHANGE ALL)
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long-here
ENCRYPTION_KEY=your-encryption-key-for-api-keys-32-characters-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=SEO Blog Automation SaaS
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# External API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
SERPER_API_KEY=your-serper-api-key-here

# Monitoring (Recommended)
SENTRY_DSN=https://your-sentry-dsn-here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-email-app-password

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_live_your-live-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# File Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-production-bucket
AWS_REGION=us-east-1

# Business Logic
MAX_KEYWORDS_PER_UPLOAD=10000
MAX_BLOGS_PER_BATCH=100
DEFAULT_BLOG_MIN_WORDS=2500
DEFAULT_FAQ_COUNT=18

# Subscription Plans
STARTER_MONTHLY_BLOGS=100
PROFESSIONAL_MONTHLY_BLOGS=500
ENTERPRISE_MONTHLY_BLOGS=2000