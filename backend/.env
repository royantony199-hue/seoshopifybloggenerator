# Environment Configuration
ENVIRONMENT=development

# Security
SECRET_KEY=dev-secret-jwt-key-for-development-only-change-in-production-32chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./seo_saas.db

# Redis (optional for production)
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# External APIs (will be overridden by user API keys)
OPENAI_API_KEY=
SERPER_API_KEY=

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Stripe (optional for billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Monitoring (optional)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# AWS/S3 (optional for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Business Logic
MAX_KEYWORDS_PER_UPLOAD=10000
MAX_BLOGS_PER_BATCH=50
DEFAULT_BLOG_MIN_WORDS=2000
DEFAULT_FAQ_COUNT=15

# Subscription Limits
STARTER_MONTHLY_BLOGS=100
PROFESSIONAL_MONTHLY_BLOGS=500
ENTERPRISE_MONTHLY_BLOGS=2000