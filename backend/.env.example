# SEO Blog Automation SaaS - Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME="SEO Blog Automation SaaS"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=production

# Security Settings (REQUIRED FOR PRODUCTION)
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/seo_saas_db

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
SERPER_API_KEY=your-serper-api-key-here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Business Logic Limits
MAX_KEYWORDS_PER_UPLOAD=10000
MAX_BLOGS_PER_BATCH=50
DEFAULT_BLOG_MIN_WORDS=2000
DEFAULT_FAQ_COUNT=15

# Subscription Limits
STARTER_MONTHLY_BLOGS=100
PROFESSIONAL_MONTHLY_BLOGS=500
ENTERPRISE_MONTHLY_BLOGS=2000