# Backend Environment Variables
DATABASE_URL=sqlite:///./seo_saas.db
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters
OPENAI_API_KEY=your-openai-api-key-here
ENVIRONMENT=development
DEBUG=true

# Shopify OAuth (for Dev Dashboard apps)
# Get these from: https://dev.shopify.com/dashboard/{partner_id}/apps/{app_id}/settings
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret
SHOPIFY_OAUTH_REDIRECT_URI=http://localhost:8000/api/shopify/oauth/callback
SHOPIFY_SCOPES=read_content,write_content

# Legacy Shopify tokens (for stores with custom apps)
SHOPIFY_ACCESS_TOKEN_PERFECTSEED=shpat_xxx
SHOPIFY_ACCESS_TOKEN_TRUSTTHEPLANT=shpat_xxx
